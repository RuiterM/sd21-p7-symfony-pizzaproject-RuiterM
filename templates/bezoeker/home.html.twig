{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <h4>
                                    <a class="nav-link m-5 border-bottom border-dark border-2" href="{{ path('home') }}">Home</a>
                                </h4>
                            </li>
                            <li class="nav-item">
                                <h4>
                                    <a class="nav-link m-5 border-bottom border-dark border-2" href="{{ path('contact') }}">Contact</a>
                                </h4>
                            </li>
                            <li class="nav-item">
                                <img style="margin-left: 190px; margin-right: 400px; height: 150px; width: 150px;" class="img-fluid" src="{{ asset('img/pizza_logo.png') }}">
                            </li>
                            <li class="nav-item">
                                <h4>
                                    <a class="nav-link m-5 float-end border-bottom border-dark border-2" href="{{ path('login') }}">Login</a>
                                </h4>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        <br>
        <br>
        <div class="container">
            <div class="d-flex justify-content-center">
                <h1>Welkom bij pizza restaurant Sopranos!</h1>
            </div>
            <div class="d-flex justify-content-center">
                <h3>De beste pizzas in de buurt!</h3>
            </div>
        </div>
            <br>

    <div class="d-flex justify-content-center">
        <div class="row">
            {%for category in categories  %}
                <div class="col">
                    <div class="card" style="{{ category.style }}">
                        <img src="{{ asset(category.image) }}" alt="no picture" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title text-light">{{ category.name}}</h5>
                            <p class="card-text text-light">{{ category.description}}</p>
                            <a href="" class="btn text-light" style="background: black">Bestellen</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
        <br>
        <br>
        <br>
        <div class="container">
            <div class="d-flex justify-content-center">
                <h5>Afdeling Software Development, Tinwerf 16, Den Haag</h5>
            </div>
        </div>
        <br>
        <br>
    </div>
{% endblock %}